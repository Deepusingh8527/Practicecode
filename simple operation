Reverse array question #####################################

int rev(int arr[], int size){

  int s,e;
  s=0;
  e=size-1;

  while(s<e){
    swap(arr[s], arr[e]);

    s++;
    e--;
  }
  
   return 0;

}

void print(int arr[], int size){
    for(int i=0; i<size; i++){
     cout<<arr[i]<<" ";
   }
}

