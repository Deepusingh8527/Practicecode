int join(int arr[], int n){


  cout<<"The Array Elements are :: \n";
  

  for(int i=0; i < n; i++){

    cout<<arr[i]<<" ";

  }
return 0;
  }


  void printArray(int arr[], int size) {
   // print each element of the array
   for (int i = 0; i < size; i++) {
      cout << arr[i] << " ";
   }
}

  int rev(int arr[], int size){
int start , end;
    while(start<=end){
    start=0;
    end = size-1;
      swap(start, end);
      
    }
    return 0;
    
  }


int binary(int arr[], int n, int key){

  int s=0;
  int e=n-1;
  int mid=s+(e-s)/2;

  while(s<=e){

    if(arr[mid]==key){
      return mid;
    }

    if(key > arr[mid]){
      s=mid+1;
    }
    else{
      e=mid-1;
    }

  mid=s+(e-s)/2;
  }
    return -1;
}
int i,j;
 void printone(int arr[], int n) {
    for(int i=0; i<n; i++){
      cout<<arr[i]<<" ";
    }
  
  }


  void imp(int arr[], int n){
    int i=0; j=(n-1);
    while(i<j){
      
    while(arr[i]==0 && i<j){
      i++;
    }
    while(arr[j]==1 && i<j){
      j--;
    }

    if(i<j){
    swap(arr[i], arr[j]);
    i++;
    j--;
      }
      }
      }

